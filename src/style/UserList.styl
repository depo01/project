.c-header_container
    width: maxmin(600px, calc(50% - 5px), 60vw)
    margin 1rem 1rem
    position sticky
    top: 0
    z-index 10
    padding 1rem
    background-color #015931
    border-bottom: 1px solid rgba(0, 0, 0, 0.125)
    box-shadow 0 5px 20px 0 rgba(0, 0, 0, 0.04)
    h1
        color white
        text-align center
        text-transform uppercase
        

.c-header
    display flex
    align-items center
    padding 0.5rem 1rem
    border-bottom-left-radius: 20px
    border-radius: 20px
    background-color: #fafafa7c
    .c-header_btn
        margin-left 1rem
        margin-right 1rem
        padding 0.25rem 0.5rem
        border: 1px solid rgba(0, 0, 0, 0.125)
        border-radius: 0.25rem
        font-size: 0.875rem
        font-weight: 500
        line-height: 1.5
        color: #000407
        transition: color 0.15s ease-in-out, background-color 0.15s ease-in-out, border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out
        &:hover
            color: #080800
            background-color: rgba(255,184,4,255)
            border-color: #ffffff

    @media screen and (max-width: 768px) {
        flex-direction column
        }

.c-header_input
    padding 0.5rem 0.5rem 0.75rem 0.75rem
    border-radius 0.25rem
    border-width 1px

.c-main
    margin 1rem 5rem
    display grid
    grid-template-columns repeat(1, minmax(0,1fr))
    gap 1rem

    @media screen and (min-width: 640px) {
        grid-template-columns repeat(2, minmax(0,1fr))
    }
    @media screen and (min-width: 768px) {
        grid-template-columns repeat(3, minmax(0,1fr))
    }
    @media screen and (min-width: 1024px) {
        grid-template-columns repeat(4, minmax(0,1fr))
    }
    @media screen and (min-width: 1280px) {
        grid-template-columns repeat(5, minmax(0,1fr))
    }


.c-main__button-container
    display flex
    padding 0.5rem
    align-items center
    .c-main_button
            padding-top: 0.5rem
            padding-bottom: 0.5rem
            padding-left: 1rem
            padding-right: 1rem
            border-top-left-radius: 0.375rem
            border-bottom-left-radius: 0.375rem
            border-top-width: 1px
            border-bottom-width: 1px
            border-left-width: 1px
            width: 100%
            font-size: 1rem
            line-height: 1.5rem
            font-weight: 500
            color: #000000
            background-color: #ffffff
            &:hover
                color: #080800
                background-color: #fcb701
                border-color: #ffffff

    @media screen and (max-width: 768px) {
        flex-direction column
        }

.c-main__text_paginacion
    padding-left: 1rem;
    padding-right: 1rem;
    width: 50%;
    font-size: 1rem; 
    text-align: center;   
    font-weight: 500;
    color: #000000;

    @media screen and (max-width: 768px) {
        width: 100%;
    }
    